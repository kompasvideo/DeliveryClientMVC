@{
    ViewData["Title"] = "Зарегистрировать";
}
@model IEnumerable<Client>

<div class="text-center">
    <h1 class="display-4">Зарегистрировать заявку</h1>    
    <div class="card-body">
        <form asp-action="AddOrder"
              asp-controller="Order" method="post">
            <input type="text" name="date" class="form-control" placeholder="Дата"
                   value="" />
            <select name="shipper" class="form-control">
                @foreach (var p in Model)
                {
                    <option value="@p.Name">@p.Name</option>
                }
            </select>
            <select name="consignee" class="form-control" placeholder="Грузоотправитель">
                @foreach (var p in Model)
                {
                    <option value="@p.Name">@p.Name</option>
                }
            </select>
            <input type="text" name="cargo" class="form-control" placeholder="Груз"
                   value="" />
            <button type="submit" class="d-inline-flex btn btn-block btn-primary">
                Зарегистрировать заявку
            </button>
        </form>
    </div>
</div>